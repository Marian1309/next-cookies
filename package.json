{
  "name": "@pidchashyi/next-cookies",
  "version": "2.0.1",
  "description": "A utility to get cookies from Next.js",
  "keywords": [
    "next",
    "cookies",
    "typescript",
    "utility"
  ],
  "homepage": "https://github.com/Marian1309/next-cookies#readme",
  "bugs": {
    "url": "https://github.com/Marian1309/next-cookies/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Marian1309/next-cookies.git"
  },
  "license": "MIT",
  "author": "Marian Pidchashyi",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./v15": {
      "import": "./dist/v15/index.js",
      "require": "./dist/v15/index.js",
      "types": "./dist/v15/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "bun run build",
    "postpublish": "rimraf -rf dist"
  },
  "dependencies": {
    "next-14": "npm:next@14.2.15",
    "next-15": "npm:next@15.3.0"
  },
  "files": [
    "src",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^24.0.3",
    "typescript": "^5.0.0"
  }
}
